<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <% if current_user %>
        <td><%= link_to 'Add', account_list_items_path(current_list, :item => { :product_id => product.id }), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
